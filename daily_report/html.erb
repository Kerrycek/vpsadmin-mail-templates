      <th>ID</th>
      <th>QUEUED</th>
      <th>TIME</th>
      <th>REAL</th>
      <th>MEMBER</th>
      <th>SERVER</th>
      <th>VPS</th>
      <th>TYPE</th>
      <th>DONE?</th>
      <th>OK?</th>
    </tr>
    <% @transactions[:failed].includes(:user, :node).each do |t| %>
      <tr class="<%= t.t_success == 0 ? "error" : "warning" %>">
        <td><a href="<%= url("transactions", "chain=#{t.transaction_chain_id}&transaction=#{t.id}") %>"><%= t.id %></a></td>
        <td><%= t.created_at %></td>
        <td><%= duration(t.finished_at ? (t.finished_at - t.created_at).to_i : 0) %></td>
        <td><%= duration(t.finished_at ? (t.finished_at - t.started_at).to_i : 0) %></td>
        <td>
          <a href="<%= url("adminm", "action=edit&id=#{t.t_m_id}") %>"><%= t.t_m_id ? "#{t.t_m_id} #{t.user.login}" : '---' %></a>
