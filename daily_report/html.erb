<%

def url(page, params = nil)
  @base_url + "?page=" + page + (params ? "&#{params}" : "")
end

def time(t)
  return '---' unless t
  t = Time.at(t) unless t.is_a?(::Time)
  t.strftime("%Y-%m-%d %H:%M:%S")
end

def duration(interval)
  d = interval / 86400
  h = interval / 3600 % 24
  m = interval / 60 % 60
  s = interval % 60

  if d > 0
    "%d days, %02d:%02d:%02d" % [d, h, m, s]
  else
    "%02d:%02d:%02d" % [h, m, s]
  end
end

def balance(a, b)
  ret = a - b
  sign = ""

  if ret > 0
    sign = "+"
  elsif ret < 0
    sign = ''
  end

  "#{sign}#{ret}"
end

